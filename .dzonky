#!/bin/zsh
FG='#ffffff'
BG='#1a1a1a'
FN='-*-terminus-*-r-normal-*-12-120-*-*-*-*-iso8859-*'
H=14

# Bottom Bar
conky -c ~/.conkyBottom | dzen2 -bg $BG -fg $FG -h $H -y 754 -w 1024 -e '' -fn $FN -ta l &

# Top Left Bar
conky -c ~/.conkyTop | dzen2 -u -l 1 -bg $BG -fg '#fffff0' -h $H -tw 300 -e 'button1=togglecollapse' -x 724 -fn $FN -ta r &
