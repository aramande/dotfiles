##
# MailBox Config {{{
#####

set mbox_type           = Maildir
set mbox                = +mbox
set folder              = ~/mail
set spoolfile           = +inbox
set header_cache        = ~/.mutt/cache/headers
set message_cachedir    = ~/.mutt/cache/bodies
set record              = +inbox
set postponed           = +drafts
set maildir_trash       = yes
# }}}

##
# Sender {{{
#####

set realname            = 'Vikas Kanhaua'
set from                = "vik_k@archlinux.us"
set sendmail            = "/usr/bin/msmtp"
# }}}

##
# Misc Opts {{{
#####

set allow_ansi
set menu_scroll
set check_new
set fast_reply
set sig_dashes
set askcc
set delete
set wrap_search
set reverse_alias
set sendmail_wait       = -1   # don't wait for sending... to complete
set confirmcreate       = yes
set use_from            = yes
set envelope_from       = yes
set edit_headers        = yes
set copy                = yes
set include             = yes
set forward_quote       = yes
set collapse_unread     = yes
set status_chars        = "-*%A"
set editor              = "vim +:silent+?^$"
set ispell              = "aspell -e -c"
set sort                = threads
set sort_aux            = reverse-last-date-received
unset mark_old

# headers to show
ignore *                                          # ignore all headers
unignore from: to: cc: subject:                   # show only these
hdr_order from: to: cc: subject:                  # and in this order
# }}}

##
# Mailboxes & lists {{{
#####

subscribe arch-announce arch-dev-pub arch-general aur-general xmonad mc awesome awesome-devel
mailboxes =inbox =sent_mail =facebook =aur-general =arch-general =arch-dev-pub =awesome =awesome-devel =arch-announce =mc =xmonad =drafts
# }}}

##
# Enriched messages {{{
#####

auto_view text/html                                               # view html automatically
alternative_order text/plain text/enriched text/html              # save html for last
# }}}

##
# Pager options {{{
#####

set pager_stop                                                  # don't go to next message automatically
set menu_scroll                                                 # scroll in menus
set smart_wrap                                                  # don't split words
set pager_index_lines   = 10                                    # number of index lines to show
set pager_context       = 5                                     # number of context lines to show
set quote_regexp        = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+" # how to spot quote blocks
# }}}

##
# Different Formats {{{
#####

set date_format         = "%d/%m/%y at %I:%M%P"
set index_format        = "%4C [%Z]  %D  â€¢  %-20.20L %s %> %c"
set pager_format        = "[%C/%m] %b  %> %lL (%P)"             # pager statusbar
set folder_format       = "%2C %t %N %8s %d %f"                 # mailbox list view
set status_format       = "%r %?M?%M/?%m total, %?n?%n new, ?%?p?%p drafts, ?%?t?%t +tagged, ?%?d?%d deleted, ?(%f %l)  %?b?%b unread folders ?%>  %V   sort by: %s/%S  (%P) %r"
set alias_format        = "%4n %t %-20a %r"
# }}}

##
# Various Directories & Sourced {{{
#####

set tmpdir              = ~/.mutt/temp
set signature           = ~/.mutt/signature
set alias_file          = ~/.mutt/aliases.muttrc
set mailcap_path        = ~/.mutt/mailcap.muttrc

source ~/.mutt/aliases.muttrc
source ~/.mutt/colors.muttrc
source ~/.mutt/sidebar.muttrc
# }}}

##
# bindings {{{
#####

bind pager q            exit
bind pager /            search
bind pager <up>         previous-line
bind pager <down>       next-line
bind pager k            previous-line
bind pager j            next-line
bind pager gg           top
bind pager G            bottom
bind index gg           first-entry
bind index G            last-entry
bind index,pager K      previous-unread
bind index,pager J      next-unread
bind index U            undelete-thread
bind index,pager R      group-reply
# }}}

##
#Macros {{{
#####

macro index h   "c?" "view folders"
macro index B   "<limit>~b " "search message bodies"
macro index I   "<change-folder>!<enter>" "go to Inbox"
macro index P   "<pipe-message>cat > ~/" "save message as"
macro index Z   "<shell-escape>/usr/bin/offlineimap <enter>" "sync IMAP"
macro index b   "<enter-command>toggle sidebar_visible<enter>"
# }}}
